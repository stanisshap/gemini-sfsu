% Define SFSU colors
\definecolor{CorePurple}{HTML}{442C8B}
\definecolor{Purple2}{HTML}{665AA7}
\definecolor{Purple3}{HTML}{B1A5D0}
\definecolor{CoreGold}{HTML}{DCAE27}
\definecolor{Gold2}{HTML}{FFD24f}
\definecolor{Gold3}{HTML}{FFEC82}

\definecolor{LightGold}{HTML}{C99700}

\definecolor{DarkGray}{HTML}{333F48}
\definecolor{LightGray}{HTML}{E4E4E4}
\definecolor{White}{HTML}{FFFFFF}


% Background and foreground
\setbeamercolor{background canvas}{bg=White}
\setbeamercolor{normal text}{fg=DarkGray}
\setbeamercolor{alerted text}{fg=CorePurple}

% Title and sections
\setbeamercolor{frametitle}{fg=White, bg=CorePurple}
\setbeamercolor{title}{fg=White, bg=CorePurple}
\setbeamercolor{section in toc}{fg=CorePurple, bg=LightGray}

% Blocks
\setbeamercolor{block title}{fg=White, bg=CorePurple}
\setbeamercolor{block body}{fg=DarkGray, bg=LightGray}
\setbeamercolor{block title example}{fg=White, bg=DarkGray}
\setbeamercolor{block body example}{fg=DarkGray, bg=White}

% Itemize, enumerate, etc.
\setbeamercolor{item projected}{bg=CorePurple, fg=White}
\setbeamercolor{enumerate item}{fg=CorePurple}

% Navigation symbols (optional)
\setbeamercolor{navigation symbols dimmed}{fg=DarkGray}
\setbeamercolor{navigation symbols}{fg=CorePurple}

% Additional styling
\setbeamercolor{subsection in toc}{fg=DarkGray, bg=LightGray}
\setbeamercolor{frametitle continuation}{fg=White, bg=DarkGray}

% Footer and headline
\setbeamercolor{headline}{fg=White, bg=CorePurple}
\setbeamercolor{footline}{fg=White, bg=DarkGray}
\setbeamercolor{title in head/foot}{fg=White, bg=CorePurple}
\setbeamercolor{author in head/foot}{fg=White, bg=DarkGray}

\setbeamercolor{caption}{fg=DarkGray}
\setbeamercolor{caption name}{fg=DarkGray}

